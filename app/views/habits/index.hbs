<h1>Habits - Index</h1>
<h3>Welcome {{name}}</h3>
<p>Here are some good habits</p>

<div class="fixed-action-btn">
    <a href="/habits/add" class="btn-floating btn-large waves-effect waves-light red"><i class="fas fa-plus"></i></a>
</div>

{{#if habits}}
<table class="striped">
    <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each habits}}
        <tr>
            <td><img src="{{image}}" class="circle responsive-img img-tiny"></td>
            <td><a href="/habits/{{_id}}">{{title}}</a></td>
            <td><span class="dash-status">{{status}}</span></td>

            <td>
                <a href="/habits/edit/{{_id}}" class="btn btn-float">
                    <i class="fas fa-edit"></i>
                </a>

                <form action="/habits/{{_id}}" method="POST" id="delete-form">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn red">
                        <i class="fas fa-trash"></i>
                    </button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>There is no user in the database ?!?</p>
{{/if}}